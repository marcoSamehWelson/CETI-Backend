@model Caritas_Egypt_Backend.Models.SessionReservations

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>إنشاء</h1>

<h4>حجز الجلسات</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="coursePriceId" class="control-label"></label>
                <select asp-for="coursePriceId" class ="form-control" asp-items="ViewBag.coursePriceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrainerId" class="control-label"></label>
                <select asp-for="TrainerId" class ="form-control" asp-items="ViewBag.TrainerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SessionDateTime" class="control-label"></label>
                <input asp-for="SessionDateTime" class="form-control" />
                <span asp-validation-for="SessionDateTime" class="text-danger"></span>
            </div>
             <div class="form-group">
              <label class="form-check-label form-check">
                        <input class="form-check-input" asp-for="InAttend" /> @Html.DisplayNameFor(model => model.InAttend)
                    </label>
            </div>
               <div class="form-group">
              <label class="form-check-label form-check">
                        <input class="form-check-input" asp-for="InAbsence" /> @Html.DisplayNameFor(model => model.InAbsence)
                    </label>
            </div>
            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">عودة إلي القائمة السابقة</a>
</div>

               